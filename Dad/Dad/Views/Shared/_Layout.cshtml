<!DOCTYPE html>
<html>
<head>
    <title>DAD | @ViewBag.Title</title>
    <meta charset="utf-8" />
    <!-- Mobile viewport optimized for ipad: h5bp.com/viewport -->
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/ddmenu.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var f = function () {
            //Needs to be pulled out and into its own file... will work here for now
            $('a.ddbutton', '#topnav').click(function () {
                var menu = this.getAttribute('data-id') + 'menu';

                $('div.ddmenu').slideUp();

                $('#' + menu).slideDown();

                $('#contentcontainer').one('click', function () {
                    $('div.ddmenu').slideUp();
                });
            });
        };

        $(document).ready(f);
    </script>
</head>

<body>
    <header>
        <div id="logo">
            <img src="@Url.Content("~/Content/img/dad.png")" />
        </div>

        <div id="dlogo">
                <img src="@Url.Content("~/Content/img/DS-Logo-White.png")" /> D.A.D.
        </div>

        <div id="topnav">

            <a href="@Url.Action("Index", "Home")"><img src="@Url.Content("~/Content/img/tr-home.png")" /></a>
            <a href="#" class="ddbutton" data-id="options"><img src="@Url.Content("~/Content/img/tr-gear.png")" /></a>
            <a href="#"><img src="@Url.Content("~/Content/img/tr-search.png")" /></a> <!-- Replace with bug image when Richard makes it -->

            <!-- Drop-Down menu DIVs -->
            <div id="optionsmenu" class="ddmenu shadow">
                <ul>
                    <li><a href="#">Edit People</a></li>
                    <li><a href="#">Log Out</a></li>
                </ul>
            </div>
            <!-- /Drop-Down menu DIVs -->

            Welcome, [insert username here]. 
        </div>

        <div class="clear"></div>
    </header>
    
    <div id="contentcontainer">
        @RenderBody()
    </div>

    <!-- JavaScript at the bottom for fast page loading -->
</body>
</html>
